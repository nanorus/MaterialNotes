<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_note_iv_drawText"
        android:layout_toEndOf="@+id/list_item_note_iv_drawText">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_item_note_name"
            android:layout_alignStart="@+id/list_item_note_name"
            android:layout_below="@+id/list_item_note_name"
            android:text="Priority: "
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/list_item_note_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/list_item_note_iv_priority_color"
            android:layout_toRightOf="@+id/list_item_note_iv_priority_color"
            android:text="First user's note"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/list_item_note_tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_note_name"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="1"/>
    </RelativeLayout>

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/list_item_note_iv_drawText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>
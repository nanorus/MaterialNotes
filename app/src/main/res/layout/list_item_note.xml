<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <TextView
        android:id="@+id/list_item_note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="First user's note"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/list_item_note_iv_priority_color"
        android:layout_toEndOf="@+id/list_item_note_iv_priority_color"/>

    <ImageView
        android:id="@+id/list_item_note_iv_priority_color"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>
</RelativeLayout>